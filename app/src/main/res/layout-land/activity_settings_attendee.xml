<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsAttendeeXml"
    android:background="@drawable/bg_with_stars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AttendeeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-117dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="89dp"
            android:text="Account Settings"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textViewNoti"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_below="@+id/textView5"
            android:layout_gravity="center"
            android:layout_marginStart="43dp"
            android:layout_marginTop="47dp"
            android:layout_toEndOf="@+id/description_fieldAttendee"
            android:text="Turn on Notifications"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>

        <ToggleButton
            android:id="@+id/noti_toggle"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_usernameAttendee"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="-129dp"
            android:layout_marginEnd="234dp"
            android:layout_toEndOf="@+id/textViewNoti" />

        <EditText
            android:id="@+id/update_usernameAttendee"
            android:layout_width="243dp"
            android:layout_height="34dp"
            android:layout_below="@+id/updateUsername"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Update Current Username">

        </EditText>

        <TextView
            android:id="@+id/editDesc"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:text="Edit Description"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>

        <EditText
            android:id="@+id/description_fieldAttendee"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_below="@+id/editDesc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Update Current Description"></EditText>

        <TextView
            android:id="@+id/updateUsername"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_fieldAttendee"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="Update Username"
            android:textColor="@color/white"
            android:textSize="20sp">

        </TextView>

        <Button
            android:id="@+id/backtoprofileAttendee"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNoti"
            android:layout_marginStart="57dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="108dp"
            android:layout_toEndOf="@+id/update_usernameAttendee"
            android:onClick="openGPSsettings"
            android:text="GPS settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/save_changesAttendee"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNoti"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="167dp"
            android:layout_marginBottom="108dp"
            android:layout_toEndOf="@+id/backtoprofileAttendee"
            android:text="Update Settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
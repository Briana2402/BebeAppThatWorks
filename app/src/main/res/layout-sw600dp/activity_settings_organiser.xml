<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsOrganiserXml"
    android:background="@drawable/bg_with_stars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsOrganiser">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="176dp"
            android:text="Account Settings"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/editDesc"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:text="Edit Description"
            android:textColor="@color/white"
            android:textSize="34sp"></TextView>

        <EditText
            android:id="@+id/description_fieldOrganiser"
            android:layout_width="419dp"
            android:layout_height="81dp"
            android:layout_below="@+id/editDesc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Update Current Description"
            android:textSize="24sp"></EditText>

        <TextView
            android:id="@+id/textViewNoti"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_below="@+id/update_usernameOrganiser"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="39dp"
            android:text="Turn on Notifications"
            android:textColor="@color/white"
            android:textSize="34sp"></TextView>

        <ToggleButton
            android:id="@+id/noti_toggle"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_usernameOrganiser"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="302dp"
            android:layout_toEndOf="@+id/textViewNoti" />

        <TextView
            android:id="@+id/updateUsername"
            android:layout_width="405dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_fieldOrganiser"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:text="Update Username"
            android:textColor="@color/white"
            android:textSize="34sp">

        </TextView>

        <EditText
            android:id="@+id/update_usernameOrganiser"
            android:layout_width="422dp"
            android:layout_height="69dp"
            android:layout_below="@+id/updateUsername"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Update Current Username"
            android:textSize="24sp">

        </EditText>

        <Button
            android:id="@+id/backtoprofileOrganiser"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNoti"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="108dp"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:textSize="24sp" />

        <Button
            android:id="@+id/save_changesOrganiser"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNoti"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="367dp"
            android:layout_marginBottom="108dp"
            android:layout_toEndOf="@+id/backtoprofileOrganiser"
            android:text="Update Settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:textSize="24sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
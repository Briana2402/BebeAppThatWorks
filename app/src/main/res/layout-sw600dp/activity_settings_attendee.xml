<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsAttendeeXml"
    android:background="@drawable/bg_with_stars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AttendeeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="78dp">

        <TextView
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="183dp"
            android:text="Account Settings"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/editDesc"
            android:layout_width="422dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:text="Edit Description"
            android:textColor="@color/white"
            android:textSize="34sp"></TextView>

        <EditText
            android:id="@+id/description_fieldAttendee"
            android:layout_width="498dp"
            android:layout_height="76dp"
            android:layout_below="@+id/editDesc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Update Current Description"
            tools:textSize="34sp"></EditText>

        <TextView
            android:id="@+id/textViewNoti"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_below="@+id/update_usernameAttendee"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="39dp"
            android:text="Turn on Notifications"
            android:textColor="@color/white"
            android:textSize="34sp"></TextView>

        <ToggleButton
            android:id="@+id/noti_toggle"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_usernameAttendee"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="414dp"
            android:layout_toEndOf="@+id/textViewNoti"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/updateUsername"
            android:layout_width="495dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_fieldAttendee"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:text="Update Username"
            android:textColor="@color/white"
            android:textSize="34sp">

        </TextView>

        <EditText
            android:id="@+id/update_usernameAttendee"
            android:layout_width="493dp"
            android:layout_height="69dp"
            android:layout_below="@+id/updateUsername"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="Update Current Username"
            tools:textSize="34sp">

        </EditText>

        <Button
            android:id="@+id/backtoprofileAttendee"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNoti"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="108dp"
            android:onClick="openGPSsettings"
            android:text="GPS settings"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/save_changesAttendee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNoti"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="108dp"
            android:layout_toEndOf="@+id/backtoprofileAttendee"
            android:text="Update Settings"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>